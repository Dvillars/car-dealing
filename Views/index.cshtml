<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Car Dealership</title>
  </head>
  <body>
    <div class="jumbotron">
      <h1>VilEbyCorp Car Dealership</h1>
      <h2>Where the cars are kind of evil</h2>
    </div>
    <div class="car-addition">
      <form action="add-new-car" method="post">
        <div class="form-group">
          <label for="make-model">Make/Model: </label>
          <input type="text" name="make-model" id="make-model">
        </div>
        <div class="form-group">
          <label for="mileage">Mileage: </label>
          <input type="number" name="mileage" id="mileage">
        </div>
        <div class="form-group">
          <label for="interior-color">Interior Color: </label>
          <input type="text" name="interior-color" id="interior-color">
        </div>
        <div class="form-group">
          <label for="exterior-color">Exterior Color: </label>
          <input type="text" name="exterior-color" id="exterior-color">
        </div>
        <div class="form-group">
          <label for="price">Price: </label>
          <input type="number" name="price" id="price">
        </div>
        <button type="submit" name="button">Add your vehicle!</button>
      </form>
    </div>

    @foreach (var Car in Model)
    {
      <div class="well">
        <div class="form-group">
          <p>Model: @Car.GetMakeModel() </p>
          <p>Mileage: @Car.GetMileage() </p>
          <p>Interior Color: @Car.GetInteriorColor() </p>
          <p>Exterior Color: @Car.GetExteriorColor() </p>
          <p>Price: @Car.GetPrice() </p>
          <form action="delete-car" method="post">
            <button name="delete-button" type="submit" value=@Car.GetId()>Delete</button>
          </form>
        </div>
      </div>
    }
  </body>
</html>
